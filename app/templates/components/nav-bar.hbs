<header class="navbar navbar-static-top navbar-inverse" id="top" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse"> <span class="sr-only">Toggle navigation</span>
       <span class="icon-bar"></span>
       <span class="icon-bar"></span>
       <span class="icon-bar"></span>

     </button>
     {{#link-to 'index' class='navbar-brand'}}Firebase Ember{{/link-to}}

   </div>
   <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
    <ul class="nav navbar-nav">
      {{#if isLoggedIn}}
        <li>
          {{#link-to 'projects'}}Projects{{/link-to}}
        </li>
        <li>
          {{#link-to 'project.new'}}New Project{{/link-to}}
        </li>
      {{else}}
          {{#link-to 'login' href=false tagName='li'}}
            {{#link-to 'login'}}Login{{/link-to}}
          {{/link-to}}
          {{#link-to 'register' href=false tagName='li'}}
            {{#link-to 'register'}}Register{{/link-to}}
          {{/link-to}}

      {{/if}}
    </ul>
    <ul class="nav navbar-nav navbar-right">
      {{#if isLoggedIn}}
        <li>
          <a href="" {{action "logout"}}>Logout</a>
        </li>
          {{#link-to 'user.show' currentUser.id href=false tagName='li'}}
            {{#link-to 'user.show' currentUser.id}}Hello {{currentUser.name}} {{/link-to}}
          {{/link-to}}
      {{/if}}
    </ul>

  </nav>
</div>
</header>
