<form id="frmLogin" role="form">
   <h2>Reset Password</h2>
    {{form-errors errors=errors}}

   <div class="form-group">
    <label for="txtEmail">Email address</label>
    {{input value=model.email type="email" class="form-control" id="txtEmail" placeholder="Enter email" name="txtEmail"}}
</div>

<button type="submit" class="btn btn-default btn-block" {{action "reset"}}>Reset </button>

</form>

{{#link-to 'login'}}Login{{/link-to}}
