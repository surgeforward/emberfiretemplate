<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create New Account</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            {{form-errors errors=errors}}
                            <div class="form-group">
                                <label>Full name</label>
                                {{input value=name type="text" class="form-control" placeholder="Enter full name" }}
                            </div>
                            <div class="form-group">
                                <label for="txtRegEmail">Email address</label>
                                {{input value=email type="email" class="form-control" id="txtRegEmail" placeholder="Enter email" name="txtRegEmail"}}
                            </div>
                            <div class="form-group">
                                <label for="txtRegPass">Password</label>
                                {{input type='password' value=password class="form-control" id="txtRegPass" placeholder="Password" name="txtRegPass"}}
                            </div>
                            <button type="submit" class="btn btn-lg btn-success btn-block" {{action "register"}} >Register</button>
                            or {{#link-to 'login'}} login to your account{{/link-to}}
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

